---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const projectEntries = await getCollection('projects', ({ data }) => (import.meta.env.PROD ? !data.draft : true));
  return projectEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={`Ash Johns | ${entry.data.title}`}>
  <div class="header">
    <h1 class="title text-gradient">{entry.data.title}</h1>
    <p class="company">{entry.data.company}</p>
    <div class="tech-stack">
      <span class="tech-stack-label">Powered by</span>
      <ul class="tech-list">
        {entry.data.techStack.map((tech) => <li>{tech}</li>)}
      </ul>
    </div>
    <Image src={entry.data.screenshot} alt="" class="screenshot" />
  </div>
  <div class="content">
    <Content />
  </div>
</Layout>

<style>
  .header {
    text-align: center;
  }

  .title {
    margin-bottom: 0;
  }

  .company {
    margin: 0;
    font-size: 2rem;
  }

  .tech-stack {
    margin-top: 3rem;
    font-size: var(--fs-subtle);
    font-family: var(--font-mono);
  }

  .tech-stack-label {
    text-transform: uppercase;
  }

  .tech-list {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 0;
    margin-top: 0.25rem;
    padding: 0;
    list-style: none;
  }

  .screenshot {
    margin-top: 3rem;
    width: 100%;
    height: auto;
  }

  .content {
    margin-top: 3rem;
    font-size: var(--fs-content);
    line-height: 1.5;
  }
</style>
