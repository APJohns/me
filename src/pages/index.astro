---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import Card from '@/components/Card.astro';
import logo from '@/images/logo.png';
import earth from '@/images/earth.png';
import Socials from '@/components/Socials.astro';

const allProjects = (await getCollection('projects', ({ data }) => (import.meta.env.PROD ? !data.draft : true))).sort(
  (a, b) => b.data.sortOrder - a.data.sortOrder
);

const allWorks = (await getCollection('work', ({ data }) => (import.meta.env.PROD ? !data.draft : true))).sort(
  (a, b) => b.data.sortOrder - a.data.sortOrder
);
---

<script>
  const timeEl = document.querySelector('#time');

  function updateTime() {
    const now = new Date().toLocaleTimeString(navigator.language, {
      timeZone: 'America/New_York',
      hour: 'numeric',
      minute: 'numeric',
      timeZoneName: 'short',
    });
    if (timeEl && now !== timeEl.textContent) {
      timeEl.textContent = now;
    }
  }

  updateTime();
  setInterval(updateTime, 1000);
</script>

<Layout title="Portfolio | Ash Johns" hasFooter={false}>
  <div class="intro">
    <h1 class="name">Hi, I'm <span class="text-gradient">Ash Johns</span></h1>
    <div class="title">Frontend Developer</div>
  </div>
  <div class="lists-grid">
    <ul class="at-a-glance">
      <li class="glance-card">
        <div class="avatar">
          <Image src={logo} alt="logo" loading="eager" class="logo" />
          <div class="status"></div>
        </div>
        <!-- Open for work -->
        <div class="working-at">
            <span class="working-at-title">Working at</span>
            <span>Revvity</span>
        </div>
      </li>
      <li class="glance-card socials-li">
        <Socials kind="subtle" />
      </li>
      <li class="glance-card time-li">
        <Image src={earth} alt="" class="earth" />
        <div class="time-card">
          <div id="time" class="time"></div>
          Boston, MA
        </div>
      </li>
      <li class="link-card garden-card">
        <a href="https://ashjohns.dev" target="_blank" class="card-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" fill="currentColor"
            ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
            <path
              d="M512 32c0 113.6-84.6 207.5-194.2 222c-7.1-53.4-30.6-101.6-65.3-139.3C290.8 46.3 364 0 448 0l32 0c17.7 0 32 14.3 32 32zM0 96C0 78.3 14.3 64 32 64l32 0c123.7 0 224 100.3 224 224l0 32 0 160c0 17.7-14.3 32-32 32s-32-14.3-32-32l0-160C100.3 320 0 219.7 0 96z"
            ></path></svg
          >
          <div class="card-content">Digital Garden</div>
        </a>
      </li>
      <li class="link-card resume-card">
        <a href="resume.pdf" target="_blank" class="card-link">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" fill="currentColor"
            ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
            <path
              d="M0 64C0 28.7 28.7 0 64 0L224 0l0 128c0 17.7 14.3 32 32 32l128 0 0 288c0 35.3-28.7 64-64 64L64 512c-35.3 0-64-28.7-64-64L0 64zm384 64l-128 0L256 0 384 128z"
            ></path></svg
          >
          <div class="card-content">Resume</div>
        </a>
      </li>
    </ul>
    <section>
      <h2 class="section-heading">Work</h2>
      <ul class="link-card-grid">
        {
          allWorks.map((work) => (
            <Card
              href={`work/${work.id}`}
              title={work.data.title}
              body={work.data.description}
              image={work.data.thumbnail}
              imageLoading="eager"
            />
          ))
        }
      </ul>
    </section>
    <section>
      <h2 class="section-heading">Projects</h2>
      <ul class="link-card-grid">
        {
          allProjects.map((project) => (
            <Card
              href={`projects/${project.id}`}
              title={project.data.title}
              body={project.data.description}
              image={project.data.thumbnail}
              imageLoading="eager"
            />
          ))
        }
      </ul>
    </section>
  </div>
</Layout>

<style define:vars={{ earth: `url("${earth.src}")` }}>
  .intro {
    text-align: center;
  }

  .name {
    margin-bottom: 0;
  }

  .title {
    margin-top: 1rem;
    color: rgba(var(--foreground), 0.6);
    font-size: var(--fs-content);
    font-family: var(--font-mono);
  }

  .lists-grid {
    display: grid;
    gap: 2rem;
    margin-top: 4rem;
  }

  .at-a-glance {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin: 0;
    padding: 0;
    list-style: none;

    .glance-card {
      display: flex;
      align-items: center;
      gap: 0.5em;
      border-radius: 8px;
      border: 1px solid rgba(255, 255, 255, 0.05);
      padding: 1rem 1.5rem;
      background: rgb(var(--background-subtle-25));
    }

    .working-at {
        display: flex;
        flex-direction: column;
    }

    .working-at-title {
        color: rgba(var(--foreground), 0.5);
        font-size: var(--fs-small);
    }

    .time-li {
      overflow: hidden;
    }

    .time {
      font-family: var(--font-mono);
      font-size: var(--fs-small);
      color: rgba(var(--foreground), 0.5);
    }

    .earth {
      display: block;
      width: 25%;
      height: auto;
      transform: scale(200%) translateX(-25%);
      filter: drop-shadow(0 0 3px rgba(59, 112, 211, 0.5));
    }
  }

  .resume-card .card-link,
  .garden-card .card-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;

    & svg {
      display: block;
      height: 1.25em;
      aspect-ratio: 1/1;
    }
  }

  .socials-li {
    display: flex;
    justify-content: center;
  }

  .icon {
    height: 1.5em;
    color: rgb(var(--accent));
  }

  @keyframes ping {
    from {
      transform: scale(100%);
      opacity: 1;
    }
    to {
      transform: scale(200%);
      opacity: 0;
    }
  }

  .avatar {
    position: relative;

    &::before {
      content: '';
      position: absolute;
      bottom: -6px;
      right: -6px;
      margin: 5px;
      border-radius: 50%;
      width: 14px;
      height: 14px;
      background: rgb(var(--background));
    }
  }

  .logo {
    display: block;
    height: 1.5em;
    width: auto;
  }

  .status {
    position: relative;

    &::before,
    &::after {
      content: '';
      position: absolute;
      bottom: -4px;
      right: -4px;
      margin: 5px;
      border-radius: 50%;
      width: 10px;
      height: 10px;
      background: rgb(0, 204, 92);
    }

    &::before {
      transform-origin: center;
      animation: ping 1s ease-out infinite;
    }

    &::after {
      background: rgb(0, 204, 92);
    }
  }

  .section-heading {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    text-align: center;
    gap: 2rem;

    /* --background-gradient: rgba(var(--background, 0)), rgb(var(--background-subtle)) 20%,
      rgb(var(--background-subtle)) 80%, rgba(var(--background, 0)); */

    &::before,
    &::after {
      content: '';
      width: 100%;
      height: 2px;
      background: rgb(var(--background-subtle));
    }

    /* &::before {
      background: linear-gradient(to right, var(--background-gradient));
    }

    &::after {
      background: linear-gradient(to left, var(--background-gradient));
    } */
  }

  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(26ch, 1fr));
    gap: 2rem;
    margin: 0;
    padding: 0;
  }

  @media (min-width: 640px) {
    .at-a-glance {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: auto auto;
      gap: 1rem 2rem;
    }

    .time-li {
      grid-column: 2;
      grid-row: 1/-1;
    }

    .garden-card {
      /* grid-column: span 2; */
    }

    /* .section-heading {
      &::before {
        background: linear-gradient(to right, var(--background-gradient));
      }

      &::after {
        background: linear-gradient(to left, var(--background-gradient));
      }
    } */
  }

  @media (min-width: 768px) {
    .at-a-glance {
      grid-template-columns: repeat(3, 1fr);
      grid-template-rows: auto;
    }

    .time-li {
      grid-column: auto;
      grid-row: auto;
    }

    .garden-card {
      grid-column: span 2;
    }
  }
</style>
